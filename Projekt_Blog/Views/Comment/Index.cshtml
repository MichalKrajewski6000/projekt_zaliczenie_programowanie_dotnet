@model IEnumerable<Projekt_Blog.comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Komentarze</h2></center>
@if (Session["user_id"] != null)
{
<p>
    @Html.ActionLink("Utwórz komentarz", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.post.Temat)
        </th>
        <th>
            @Html.Label("Autor")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tresc)
        </th>              
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.post.Temat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.nick)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tresc)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id = item.id_comment }) 
        </td>
    </tr>
}

</table>
