<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Projekt zaliczenie</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- jQuery 1.8 or later, 33 KB -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

    <!-- Fotorama from CDNJS, 19 KB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script>
    <script>
        $(document).ready(function () {                   
             $("body").addClass("light");
        });
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Soulsborne Blog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Posty", "Index", "Post")</li>
                    <li>@Html.ActionLink("Komentarze", "Index", "Comment")</li>
                    @if ((string)Session["role_id"] == "1")
                    {
                        <li>@Html.ActionLink("Użytkownicy", "Index", "User")</li>
                        <li>@Html.ActionLink("Kategorie", "Index", "Category")</li>
                        <li>@Html.ActionLink("Role", "Index", "Role")</li>
                        
                    }



                    @if (@Session["user_id"] == null)
                    {
                        <li>@Html.ActionLink("Zarejestruj się", "Create", "User")</li>
                        <li>@Html.ActionLink("Zaloguj się", "Index", "Login")</li>
                    }
                    else
                    {

                        <li><a href="@Url.Action("AccountInfo", "Login")">@Session["nick"].ToString()</a></li>
                        <li><a href="@Url.Action("LogOut","Login")">Wyloguj się</a></li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy;Michał Krajewski - PWSZ Elbląg Maj 2018 - Projekt na zaliczenie przedmiotu Aplikacje Internetowe II</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
