@model IEnumerable<Projekt_Blog.role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if ((string)Session["role_id"] == "1")
{
    <center><h2>Role</h2></center>

    <p>
        @Html.ActionLink("Dodaj rolę", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rola)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.opis)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rola)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.opis)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.role_id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.role_id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.role_id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h1 style="background-color:red;">Nie jesteś administratorem!!!!!</h1>
    <a href="@Url.Action("Index","Home")" class="btn btn-warning">Powrót na stronę główną</a>
}
