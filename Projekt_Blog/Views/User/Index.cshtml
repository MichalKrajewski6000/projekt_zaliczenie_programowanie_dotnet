@model IEnumerable<Projekt_Blog.user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if ((string)Session["role_id"] == "1")
{
    <h2>Użytkownicy</h2>

    <p>
        @Html.ActionLink("Dodaj użytkownika", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nick)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.haslo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_rej)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.role.Rola)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nick)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.haslo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_rej)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role.Rola)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.user_id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.user_id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.user_id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h1 style="background-color:red;">Nie jesteś administratorem!!!!!</h1>
    <a href="@Url.Action("Index","Home")" class="btn btn-warning">Powrót na stronę główną</a>
}